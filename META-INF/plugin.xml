<idea-plugin version="2">
    <id>ru.kulikovd.marginizer</id>
    <name>Marginizer</name>
    <description><![CDATA[Add margin to key / value pair]]></description>
    <vendor url="" email="kulikov.dm@gmail.com">Kulikov Dmitry</vendor>
    <version>1.1.3</version>

    <idea-version since-build="107.105"/>

    <actions>
        <group id="MarginizerActionGroup" text="Add margin to key / value pair" popup="false">
            <separator/>
            <action id="MarginizerAction" class="ru.kulikovd.marginizer.MarginizerAction" text="Marginize" description="Add margin to key / value pair">
              <keyboard-shortcut keymap="$default" first-keystroke="ctrl 1"/>
            </action>
            <action id="ImportBeautifier" class="ru.kulikovd.marginizer.ImportBeautifierAction" text="ImportBeautifier" description="Right way to sort imports">
              <keyboard-shortcut keymap="$default" first-keystroke="ctrl 2"/>
            </action>
            <add-to-group group-id="EditMenu" anchor="last"/>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij"/>
</idea-plugin>
